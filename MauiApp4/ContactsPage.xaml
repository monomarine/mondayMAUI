<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp4.ContactsPage"
    x:Name="PageRoot"
    Title="Контакты">

    <Grid RowDefinitions="Auto, *">

       
        <SearchBar
            Grid.Row="0"
            Margin="10"
            Placeholder="Поиск..."
            Text="{Binding SearchText}"
            SearchCommand="{Binding RefreshContactsCommand}" />

        <Grid Grid.Row="1">

          
            <RefreshView
                IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshContactsCommand}">

                <CollectionView
                    ItemsSource="{Binding Contacts}"
                    SelectionMode="None"
                    x:Name="ContactsCollectionView"
                    Margin="8">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>

                              
                                <SwipeView.RightItems>
                                    <SwipeItems Mode="Execute">
                                        <SwipeItem
                                            Text="Удалить"
                                            BackgroundColor="Red"
                                            Command="{Binding BindingContext.DeleteContactCommand, Source={x:Reference PageRoot}}"
                                            CommandParameter="{Binding}" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Frame Margin="6" Padding="12" CornerRadius="10" HasShadow="True">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackLayout>
                                            <Label Text="{Binding FirstName}" FontSize="16" FontAttributes="Bold" />
                                            <Label Text="{Binding LastName}" FontSize="14" />
                                            <Label Text="{Binding Phone}" FontSize="13" />
                                        </StackLayout>

                                        
                                        <Button
                                            Grid.Column="1"
                                            Text="✎"
                                            BackgroundColor="Transparent"
                                            Command="{Binding BindingContext.EditContactCommand, Source={x:Reference PageRoot}}"
                                            CommandParameter="{Binding}" />
                                    </Grid>
                                </Frame>

                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <Button
                Text="+"
                WidthRequest="64"
                HeightRequest="64"
                CornerRadius="32"
                FontSize="30"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="16"
                Command="{Binding AddContactCommand}" />
        </Grid>

    
        <Grid Grid.RowSpan="2" IsVisible="{Binding IsModalVisible}" BackgroundColor="#80000000">
            <Frame
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="340"
                Padding="18"
                CornerRadius="12"
                BackgroundColor="White">
                <StackLayout Spacing="10">

                  
                    <Label Text="{Binding ModalTitle}"
                           HorizontalOptions="Center"
                           FontAttributes="Bold" />

                   
                    <Entry Placeholder="Имя" Text="{Binding EditingContact.FirstName}" />
                    <Entry Placeholder="Фамилия" Text="{Binding EditingContact.LastName}" />
                    <Entry Placeholder="Телефон" Text="{Binding EditingContact.Phone}" Keyboard="Telephone" />
                    <Entry Placeholder="Email" Text="{Binding EditingContact.Email}" Keyboard="Email" />
                    <Entry Placeholder="Адрес" Text="{Binding EditingContact.Address}" />

                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="Отмена"
                                Command="{Binding CloseModalCommand}" />

                        <Button Grid.Column="1"
                                Text="Сохранить"
                                Command="{Binding SaveContactCommand}" />
                    </Grid>
                </StackLayout>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>